<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Firts_App.MenuActivity"
    android:layout_marginTop="50dp">


    <!-- Fondo azul -->
    <androidx.cardview.widget.CardView
        android:id="@+id/azul"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:cardBackgroundColor="#E929AFA2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </androidx.cardview.widget.CardView>

    <!-- Fondo Morado -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="440dp"
        app:cardBackgroundColor="#673AB7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/azul">
    </androidx.cardview.widget.CardView>

    <!-- Titulo aplicaciones -->
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="@+id/azul"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="10dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Menu"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="#E929AFA2"
            android:textStyle="bold">

        </TextView>

    </androidx.cardview.widget.CardView>

    <!-- Primera App -->
    <androidx.cardview.widget.CardView
        android:id="@+id/circulo_uno"
        android:layout_width="170dp"
        android:layout_height="170dp"
        app:layout_constraintTop_toTopOf="@+id/azul"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="240dp"
        app:cardCornerRadius="85dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#F0F0ECEC">
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/app1"
            android:layout_marginTop="40dp"
            android:layout_marginStart="30dp">

        </ImageView>

    </androidx.cardview.widget.CardView>

    <!-- Segunda App -->
    <androidx.cardview.widget.CardView
        android:id="@+id/app_2"
        android:layout_width="170dp"
        android:layout_height="170dp"
        app:cardCornerRadius="85dp"
        app:cardBackgroundColor="#F0EBE8E8"
        app:layout_constraintStart_toEndOf="@+id/circulo_uno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="130dp"
        >
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/calculadora"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp">

        </ImageView>
    </androidx.cardview.widget.CardView>

    <!-- Tercera App -->
    <androidx.cardview.widget.CardView
        android:id="@+id/app_3"
        android:layout_width="170dp"
        android:layout_height="170dp"
        app:cardCornerRadius="85dp"
        app:layout_constraintTop_toBottomOf="@id/circulo_uno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="240dp"
        android:layout_marginTop="30dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#F0F0ECEC">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:src="@drawable/escala"
            android:layout_gravity="center">

        </ImageView>

    </androidx.cardview.widget.CardView>

    <!-- Cuarta App -->
    <androidx.cardview.widget.CardView
        android:id="@+id/app4"
        android:layout_width="170dp"
        android:layout_height="170dp"
        app:cardCornerRadius="85dp"
        app:cardElevation="20dp"
        app:cardBackgroundColor="#F0F0ECEC"
        app:layout_constraintStart_toEndOf="@+id/app_3"
        app:layout_constraintTop_toBottomOf="@+id/app_2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/lista"
            android:layout_gravity="center"
            >

        </ImageView>
    </androidx.cardview.widget.CardView>

    <!-- Quinta App -->
    <androidx.cardview.widget.CardView
        android:id="@+id/App5"
        android:layout_width="170dp"
        android:layout_height="170dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_3"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="85dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/netflix">

        </ImageView>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>