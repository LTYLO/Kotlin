<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    tools:context=".Firts_App.Firts_App_Activity">

    <!-- CardView Esfera-->
    <androidx.cardview.widget.CardView
        android:id="@+id/Esfera"
        android:layout_width="446dp"
        android:layout_height="420dp"
        android:layout_marginEnd="0.1001dp"
        app:cardBackgroundColor="#9F25B4"
        app:cardCornerRadius="190dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="240dp"
            android:src="@drawable/amor"></ImageView>

    </androidx.cardview.widget.CardView>

    <!-- CardView Cuadrado -->
    <androidx.cardview.widget.CardView
        android:layout_width="446dp"
        android:layout_height="215dp"
        android:layout_marginEnd="0.1001dp"
        app:cardBackgroundColor="#9F25B4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="110dp"
            android:text="Welcome"
            android:textColor="@color/white"
            android:textSize="80sp"
            android:textStyle="bold">

        </TextView>

    </androidx.cardview.widget.CardView>

    <!-- CardView Nombre -->
    <androidx.cardview.widget.CardView
        android:id="@+id/Nombre"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:layout_marginTop="80dp"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardCornerRadius="24dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:background="@drawable/card">

        </View>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/text_nombre"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="#00FFFFFF"
            android:hint="Correo"
            android:singleLine="true"
            android:textColorHint="#9F25B4"
            android:textStyle="bold">

        </androidx.appcompat.widget.AppCompatEditText>
    </androidx.cardview.widget.CardView>

    <!-- CardView Apellido -->
    <androidx.cardview.widget.CardView
        android:id="@+id/Apellido"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:elevation="5dp"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardCornerRadius="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Nombre">

        <View
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/card">

        </View>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/text_apellido"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="#00FFFFFF"
            android:hint="ContraseÃ±a"
            android:singleLine="true"
            android:textColorHint="#9F25B4"
            android:textStyle="bold">

        </androidx.appcompat.widget.AppCompatEditText>

    </androidx.cardview.widget.CardView>

    <!-- Boton Enter -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_enter"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/btn_2"
        android:elevation="5dp"
        android:text="Enter"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Apellido"></androidx.appcompat.widget.AppCompatButton>


</androidx.constraintlayout.widget.ConstraintLayout>


