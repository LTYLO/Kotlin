<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Firts_App.requestActivity"
    android:layout_marginTop="20dp">

    <!-- CardView Fondo Azul-->
    <androidx.cardview.widget.CardView
        android:id="@+id/azul"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="#C432D0C1">
        <TextView
            android:id="@+id/saludo"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:text="Hello!"
            tools:text="Hello! Kevin"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="80dp"
            android:layout_marginTop="40dp">

        </TextView>


    </androidx.cardview.widget.CardView>

    <!-- Cardview Ciriculo Fondo -->
    <androidx.cardview.widget.CardView
        android:id="@+id/circulo"
        android:layout_width="320dp"
        android:layout_height="320dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="160dp"
    android:layout_marginBottom="150dp"
    app:cardBackgroundColor="#EBEAEA">
</androidx.cardview.widget.CardView>


    <!-- CardView Imganen de Fondo -->
    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="280dp"
        app:cardCornerRadius="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="150dp">

        <ImageView
            android:layout_width="283dp"
            android:layout_height="281dp"
            android:src="@drawable/fondo">

        </ImageView>
    </androidx.cardview.widget.CardView>

    <!-- Boton de Usuario -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/User"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:background="@drawable/btn3"
        android:text="User"
        android:textStyle="bold"
        android:textColor="#C432D0C1"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="200dp">
    </androidx.appcompat.widget.AppCompatButton>

    <!-- Boton de Menu -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/menu"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:background="@drawable/btn3"
        app:layout_constraintStart_toEndOf="@+id/User"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="150dp"
        android:text="Menu"
        android:textStyle="bold"
        android:textColor="#C432D0C1"
        android:textSize="20sp">
    </androidx.appcompat.widget.AppCompatButton>

    <!-- Linea -->
    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="3dp"
        android:orientation="horizontal"
        android:background="#59428189"
        app:layout_constraintTop_toBottomOf="@+id/circulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp">

    </LinearLayout>

    <!-- Texto Profile -->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/circulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="Profile"
            android:textStyle="bold"
            android:textColor="#C432D0C1"
            android:textSize="50sp"
            android:layout_gravity="center"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp">

        </TextView>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>